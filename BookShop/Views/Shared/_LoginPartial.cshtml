@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!-- MDB -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.3.0/mdb.min.css"
      rel="stylesheet" />
<ul class="navbar-nav">
    <li class="nav-item">
        <a class="nav-link" href="#">
            <span id="cartCount" class="badge text-bg-info">0</span>
            <i class="bi bi-cart text-white as"></i>
        </a>
    </li>
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Hello @User.Identity?.Name!
        @if(User.IsInRole("Admin"))
                {
                    <span>
                        (Admin)
                    </span>
                }
            </a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white">Wyloguj</button>
        </form>
    </li>
}
else
{

    <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Rejestracja</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Logowanie</a>
    </li>
}
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Język</a>
            <div class="dropdown-menu" style="">
                <h6 class="dropdown-header text-white">Język</h6>
                <a class="dropdown-item" href="#"> <i class="flag flag-poland"></i> Polski</a>
                <a class="dropdown-item" href="#"><i class="flag flag-us"></i>Angielski</a>
            </div>
        </li>
</ul>
